/* ===== 1) Section & Headings ===== */
.work-section {
  background: linear-gradient(135deg, #000000 0%, #0a0a0a 50%, #1a1a1a 100%);
  color: #f0f0f0;
  padding: 4rem 1rem;
  position: relative;
  overflow: hidden;
  min-height: 100vh;
}

/* Floating background particles */
.work-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 20% 30%, rgba(79, 70, 229, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 70%, rgba(236, 72, 153, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 50% 50%, rgba(59, 130, 246, 0.05) 0%, transparent 50%);
  pointer-events: none;
  z-index: 1;
}

/* Animated floating orbs */
.work-section::after {
  content: '';
  position: absolute;
  top: 10%;
  right: 10%;
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, rgba(79, 70, 229, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  animation: floatingOrb 8s ease-in-out infinite;
  pointer-events: none;
  z-index: 1;
}

@keyframes floatingOrb {
  0%, 100% {
    transform: translateY(0px) translateX(0px) scale(1);
    opacity: 0.3;
  }
  25% {
    transform: translateY(-30px) translateX(20px) scale(1.1);
    opacity: 0.5;
  }
  50% {
    transform: translateY(-15px) translateX(-25px) scale(0.9);
    opacity: 0.4;
  }
  75% {
    transform: translateY(-40px) translateX(15px) scale(1.05);
    opacity: 0.6;
  }
}

.work-title {
  font-size: 1.8rem;
  font-weight: 500;
  text-align: center;
  margin: 0;
  color: #8b5cf6;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  opacity: 0;
  transform: translateY(30px);
  animation: titleSlideIn 1s ease-out 0.2s forwards;
  position: relative;
  z-index: 10;
}

@keyframes titleSlideIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.work-subtitle {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 700;
  text-align: center;
  margin-top: 1rem;
  margin-bottom: 6rem;
  line-height: 1.2;
  opacity: 0;
  transform: translateY(40px);
  animation: subtitleSlideIn 1s ease-out 0.4s forwards;
  position: relative;
  z-index: 10;
}

@keyframes subtitleSlideIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ===== Enhanced Two‐Column Layout ===== */
.work-columns {
  display: flex;
  gap: 4rem; /* increased horizontal gap */
  max-width: 90rem;
  margin: 0 auto;
  opacity: 0;
  transform: translateY(50px);
  animation: columnsSlideIn 1s ease-out 0.6s forwards;
  position: relative;
  z-index: 10;
}

@keyframes columnsSlideIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ===== Enhanced Left Column: Scrollable Cards ===== */
.left-column {
  flex: 0 0 42%; /* slightly increased width for better proportions */
  max-height: calc(100vh - 8rem);
  overflow-y: auto;
  padding-right: 1.5rem;
  position: relative;

  /* Prevent bounce and allow scrolling to bubble to page */
  overscroll-behavior: contain;
}

/* Enhanced scrollbar styling */
.left-column::-webkit-scrollbar {
  width: 4px;
}

.left-column::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 10px;
}

.left-column::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #8b5cf6, #3b82f6);
  border-radius: 10px;
  transition: all 0.3s ease;
}

.left-column::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #7c3aed, #2563eb);
}

.left-column {
  scrollbar-width: thin;
  scrollbar-color: #8b5cf6 rgba(255, 255, 255, 0.05);
}

/* Enhanced card wrapper with staggered animations */
.work-card-wrapper {
  position: relative;
  margin-bottom: 3rem;
  opacity: 0;
  transform: translateY(50px) translateX(-30px);
  animation: cardSlideIn 0.8s ease-out forwards;
}

/* Staggered animation delays for each card */
.work-card-wrapper:nth-child(1) {
  animation-delay: 0.8s;
}

.work-card-wrapper:nth-child(2) {
  animation-delay: 1s;
}

.work-card-wrapper:nth-child(3) {
  animation-delay: 1.2s;
}

.work-card-wrapper:nth-child(4) {
  animation-delay: 1.4s;
}

.work-card-wrapper:nth-child(5) {
  animation-delay: 1.6s;
}

@keyframes cardSlideIn {
  to {
    opacity: 1;
    transform: translateY(0) translateX(0);
  }
}

/* Enhanced active card with better glow effects */
.work-card-wrapper.active-card .work-card {
  transform: scale(1.03);
  box-shadow: 0 15px 35px rgba(79, 70, 229, 0.4), 
              0 5px 15px rgba(236, 72, 153, 0.3),
              inset 0 1px 0 rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(139, 92, 246, 0.3);
}

.work-card-wrapper.active-card .gradient-frame {
  background: linear-gradient(
    180deg,
    rgba(139, 92, 246, 0.8),
    rgba(59, 130, 246, 0.6),
    rgba(236, 72, 153, 0.7)
  );
  filter: blur(15px);
  transform: scale(1.02);
}

/* ===== Enhanced Gradient Frame Behind Each Card ===== */
.gradient-frame {
  position: absolute;
  top: -2px;
  left: -2px;
  width: calc(100% + 4px);
  height: calc(100% + 4px);
  background: linear-gradient(
    135deg,
    rgba(139, 92, 246, 0.3),
    rgba(59, 130, 246, 0.3),
    rgba(6, 182, 212, 0.3),
    rgba(236, 72, 153, 0.3)
  );
  background-size: 400% 400%;
  border-radius: 1.2rem;
  filter: blur(12px);
  z-index: 0;
  animation: gradientFrameShift 6s ease-in-out infinite;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes gradientFrameShift {
  0%, 100% {
    background-position: 0% 50%;
  }
  25% {
    background-position: 100% 0%;
  }
  50% {
    background-position: 100% 100%;
  }
  75% {
    background-position: 0% 100%;
  }
}

/* ===== Enhanced Work Card with Glass Morphism ===== */
.work-card {
  position: relative;
  background: rgba(30, 30, 30, 0.9);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 1.2rem;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4),
              inset 0 1px 0 rgba(255, 255, 255, 0.05);
  z-index: 1;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.work-card:hover {
  transform: translateY(-8px) scale(1.01);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6),
              0 10px 20px rgba(139, 92, 246, 0.2),
              inset 0 1px 0 rgba(255, 255, 255, 0.1);
  border-color: rgba(139, 92, 246, 0.3);
}

/* Hover shimmer effect */
.work-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
  transition: left 0.5s ease;
  z-index: 2;
}

.work-card:hover::before {
  left: 100%;
}

/* ===== Enhanced Card Summary ===== */
.card-summary {
  padding: 2.5rem 2rem;
  font-size: 1.05rem;
  line-height: 1.7;
  color: #e5e7eb;
  background: linear-gradient(135deg, rgba(15, 15, 20, 0.8), rgba(25, 25, 30, 0.8));
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  position: relative;
  transition: all 0.3s ease;
}

/* Text reveal animation on hover */
.card-summary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(139, 92, 246, 0.1), transparent);
  transition: width 0.6s ease;
}

.work-card:hover .card-summary::before {
  width: 100%;
}

.card-summary::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: linear-gradient(90deg, #8b5cf6, #3b82f6, #06b6d4);
  transition: all 0.4s ease;
  transform: translateX(-50%);
}

.work-card:hover .card-summary::after {
  width: 90%;
}

/* ===== Enhanced Card Image ===== */
.card-image {
  position: relative;
  background: linear-gradient(135deg, rgba(10, 10, 15, 0.9), rgba(20, 20, 25, 0.9));
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rem;
  min-height: 200px;
  overflow: hidden;
}

/* Animated background pattern */
.card-image::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 25% 25%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 75% 75%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
  opacity: 0;
  transition: opacity 0.4s ease;
  z-index: 1;
}

.work-card:hover .card-image::before {
  opacity: 1;
}

.card-image img {
  max-width: 90%;
  max-height: 90%;
  object-fit: contain;
  border-radius: 0.8rem;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 2;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
}

.card-image:hover img {
  transform: scale(1.05) rotateY(5deg);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4),
              0 5px 15px rgba(139, 92, 246, 0.3);
  cursor: pointer;
}

.card-image .hover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 0.8rem;
  background: linear-gradient(
    135deg,
    rgba(139, 92, 246, 0.9),
    rgba(59, 130, 246, 0.8)
  );
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  font-size: 1.1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
  z-index: 3;
  backdrop-filter: blur(10px);
}

.card-image:hover .hover-overlay {
  opacity: 1;
  pointer-events: auto;
  transform: scale(1.02);
}

/* ===== Enhanced Right Column: Sticky Details ===== */
.right-column {
  flex: 1;
  position: relative;
}

.sticky-details {
  position: sticky;
  top: 5rem;
  padding: 2.5rem;
  background: rgba(15, 15, 20, 0.8);
  backdrop-filter: blur(20px);
  border-radius: 1.5rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  transition: all 0.4s ease;
}

.sticky-details:hover {
  border-color: rgba(139, 92, 246, 0.3);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4),
              0 5px 15px rgba(139, 92, 246, 0.2);
}

/* ===== Enhanced Project Name with Gradient ===== */
.project-name {
  font-size: 2.2rem;
  font-weight: 800;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, #ffffff, #e5e7eb, #8b5cf6);
  background-size: 200% 200%;
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: projectNameGradient 3s ease-in-out infinite;
  line-height: 1.3;
  letter-spacing: -0.02em;
  position: relative;
}

@keyframes projectNameGradient {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

.project-name::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 0;
  width: 100%;
  height: 3px;
  background: linear-gradient(90deg, #8b5cf6, #3b82f6, #06b6d4);
  border-radius: 2px;
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.4s ease;
}

.sticky-details:hover .project-name::after {
  transform: scaleX(1);
}

/* Dates */
.project-dates {
  font-size: 0.875rem;
  color: #aaa;
  margin-bottom: 1rem;
}

/* Company & “Associated with” */
.company-info {
  display: flex;
  align-items: center;
.company-logo .logo-placeholder {
  width: 4rem;
  height: 4rem;
  background: linear-gradient(135deg, #374151, #4b5563);
  color: #d1d5db;
  font-size: 0.8rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.8rem;
  border: 2px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.company-logo .logo-image {
  width: 4rem;
  height: 4rem;
  object-fit: contain;
  border-radius: 0.8rem;
  border: 2px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.95);
  padding: 0.3rem;
}

.company-logo .logo-placeholder::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.company-info:hover .logo-placeholder::before,
.company-info:hover .logo-image {
  left: 100%;
}

.company-info:hover .logo-placeholder,
.company-info:hover .logo-image {
  background: linear-gradient(135deg, #4b5563, #6b7280);
  border-color: rgba(139, 92, 246, 0.3);
  transform: scale(1.05);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.company-text {
  font-size: 1.1rem;
  color: #e5e7eb;
  font-weight: 500;
  transition: color 0.3s ease;
}

.company-info:hover .company-text {
  color: #ffffff;
}

/* ===== Enhanced Description with Text Reveal Animations ===== */
.project-desc {
  margin-bottom: 2.5rem;
  position: relative;
}

.desc-paragraph {
  margin-bottom: 1.2rem;
  font-size: 1rem;
  line-height: 1.8;
  color: #e5e7eb;
  white-space: pre-wrap;
  opacity: 0;
  transform: translateY(20px);
  animation: textReveal 0.6s ease-out forwards;
  transition: all 0.3s ease;
}

/* Staggered text reveal animation */
.desc-paragraph:nth-child(1) { animation-delay: 0.1s; }
.desc-paragraph:nth-child(2) { animation-delay: 0.2s; }
.desc-paragraph:nth-child(3) { animation-delay: 0.3s; }
.desc-paragraph:nth-child(4) { animation-delay: 0.4s; }
.desc-paragraph:nth-child(5) { animation-delay: 0.5s; }

@keyframes textReveal {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.desc-paragraph:hover {
  color: #ffffff;
  text-shadow: 0 2px 8px rgba(139, 92, 246, 0.3);
}

.bullet-line {
  position: relative;
  padding-left: 2rem;
  transition: all 0.3s ease;
}

.bullet-line::before {
  content: '✦';
  color: #8b5cf6;
  position: absolute;
  left: 0.5rem;
  top: 0;
  font-size: 1.2rem;
  line-height: 1.8;
  animation: starTwinkle 2s ease-in-out infinite;
  transition: all 0.3s ease;
}

@keyframes starTwinkle {
  0%, 100% {
    opacity: 0.7;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

.bullet-line:hover::before {
  color: #c4b5fd;
  transform: scale(1.2);
}

/* ===== Enhanced Skills Chips with Advanced Animations ===== */
.skills-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 1rem;
}

.skill-chip {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.05);
  color: #f0f0f0;
  padding: 0.8rem 1.5rem;
  border-radius: 30px;
  font-size: 0.95rem;
  font-weight: 600;
  white-space: nowrap;
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
  opacity: 0;
  transform: translateY(30px) scale(0.8);
  animation: chipSlideIn 0.5s ease-out forwards;
}

/* Staggered chip animations */
.skill-chip:nth-child(1) { animation-delay: 0.1s; }
.skill-chip:nth-child(2) { animation-delay: 0.15s; }
.skill-chip:nth-child(3) { animation-delay: 0.2s; }
.skill-chip:nth-child(4) { animation-delay: 0.25s; }
.skill-chip:nth-child(5) { animation-delay: 0.3s; }
.skill-chip:nth-child(6) { animation-delay: 0.35s; }

@keyframes chipSlideIn {
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.skill-chip::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(139, 92, 246, 0.3),
    transparent
  );
  transition: left 0.5s ease;
}

.skill-chip:hover::before {
  left: 100%;
}

.skill-chip:hover {
  transform: translateY(-5px) scale(1.05);
  background: rgba(139, 92, 246, 0.15);
  border-color: rgba(139, 92, 246, 0.4);
  box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3),
              0 3px 10px rgba(0, 0, 0, 0.2);
  color: #ffffff;
}

.skill-icon {
  width: 1.2rem;
  height: 1.2rem;
  margin-right: 0.8rem;
  filter: brightness(1.2) saturate(1.2);
  transition: all 0.3s ease;
}

.skill-chip:hover .skill-icon {
  filter: brightness(1.5) saturate(1.5);
  transform: scale(1.1) rotate(5deg);
}

/* ===== Enhanced Responsive Adjustments ===== */
@media (max-width: 1023px) {
  /* Stack left + right vertically */
  .work-columns {
    flex-direction: column;
    gap: 3rem;
    animation-delay: 0.4s; /* Delay for mobile */
  }

  .left-column {
    max-height: none;
    overflow-y: visible;
    padding-right: 0;
  }

  .sticky-details {
    position: static;
    top: auto;
    margin-top: 2rem;
  }

  /* Reduce floating orb size on tablets */
  .work-section::after {
    width: 150px;
    height: 150px;
    top: 5%;
    right: 5%;
  }
}

@media (max-width: 767px) {
  .work-section {
    padding: 3rem 1rem;
  }

  /* Hide floating orb on mobile */
  .work-section::after {
    display: none;
  }

  .work-subtitle {
    font-size: clamp(1.8rem, 8vw, 2.5rem);
    margin-bottom: 4rem;
  }

  .work-columns {
    gap: 2rem;
  }

  .sticky-details {
    padding: 2rem 1.5rem;
    border-radius: 1rem;
  }

  .project-name {
    font-size: 1.8rem;
    margin-bottom: 0.8rem;
  }

  .project-dates {
    font-size: 0.85rem;
    padding: 0.5rem 1rem;
    margin-bottom: 1.5rem;
  }

  .company-info {
    padding: 1.2rem;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .company-logo .logo-placeholder {
    width: 3.5rem;
    height: 3.5rem;
    font-size: 0.7rem;
  }

  .company-text {
    font-size: 1rem;
  }

  .desc-paragraph {
    font-size: 0.95rem;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .card-summary {
    padding: 2rem 1.5rem;
    font-size: 1rem;
  }

  .card-image {
    padding: 1.5rem;
    min-height: 180px;
  }

  .skill-chip {
    font-size: 0.85rem;
    padding: 0.6rem 1.2rem;
  }

  .skill-icon {
    width: 1rem;
    height: 1rem;
    margin-right: 0.6rem;
  }

  /* Reduce card animations on mobile for performance */
  .work-card-wrapper {
    animation-duration: 0.6s;
  }

  .work-card:hover {
    transform: translateY(-4px) scale(1.005);
  }
}
